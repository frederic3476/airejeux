{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
    <ul class="breadcrumb fil">
        <li><a href="{{ path('index') }}">Accueil</a></li>
        <li><a href="{{ path('fos_user_profile_show') }}">Mon compte</a></li>
        <li class="active">Changement du mot de passe</li> 
    </ul>  
    <div class="row">
        <div class="col-lg-offset-2 col-lg-7 text-center">    
            <form action="{{ path('fos_user_change_password') }}" {{ form_enctype(form) }} method="POST" class="form-horizontal" >
                <div class="form-group">
                    {{ form_errors(form.current_password) }}
                    {{ form_widget(form.current_password, {'attr':{'placeholder':'Mot de passe actuel:', 'class':'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_errors(form.plainPassword.first) }}
                    {{ form_widget(form.plainPassword.first, {'attr':{'placeholder':'Nouveau mot de passe:', 'class':'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_errors(form.plainPassword.second) }}
                    {{ form_widget(form.plainPassword.second, {'attr':{'placeholder':'VÃ©rification:', 'class':'form-control'}}) }}
                </div>
                {{ form_row(form._token) }}
                <div>
                    <input class="btn btn-blue center-block" type="submit" value="{{ 'change_password.submit'|trans }}" />
                </div>
            </form>
        </div>
    </div>                
{%endblock%}

