{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <div class="row">
        <div class="col-lg-offset-2 col-lg-7 text-center">
            <form class="form-horizontal" action="{{ path("fos_user_security_check") }}" method="post">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                <div class="form-group">
                    <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required" placeholder="Login:" />
                </div>
                <div class="form-group">
                    <input class="form-control" type="password" id="password" name="_password" required="required" placeholder="Mot de passe:" />
                </div>
                <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
                <div class="row">
                    <div class="col-lg-12 text-center">
                        <button class="btn btn-primary" type="submit"> S'identifier</button>
                        <a class="btn btn-primary" href="{{ path('fos_user_registration_register') }}"> S'inscrire</a>
                    </div>
                    <div class="col-lg-12 text-center">
                        <a href="{{ path('fos_user_resetting_request') }}">J'ai oubli√© mon mot de passe</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock fos_user_content %}
