<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <title>
            {% block title %}
                Aires de jeux française
            {% endblock %}
        </title>
        {% block stylesheets %}
            <link href="{{ asset('bundles/applisunairejeux/css/bootstrap.min.css') }}" type="text/css" rel="stylesheet" />
            <link href="{{ asset('bundles/applisunairejeux/css/main.css') }}" type="text/css" rel="stylesheet" />
        {% endblock%}
    </head>
    <body>
        <nav class="navbar navbar-default">
            <div class="container">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="{{ path('index') }}">AireJeux</a>
                </div>

                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav">
                        <li class="active"><a href="#">Link <span class="sr-only">(current)</span></a></li>
                        <li><a href="#">Link</a></li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Dropdown <span class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu">
                                <li><a href="#">Action</a></li>
                                <li><a href="#">Another action</a></li>
                                <li><a href="#">Something else here</a></li>
                                <li class="divider"></li>
                                <li><a href="#">Separated link</a></li>
                                <li class="divider"></li>
                                <li><a href="#">One more separated link</a></li>
                            </ul>
                        </li>
                    </ul>
                    
                        <div class="btn-group navbar-right">
                            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">Mon espace personnel <span class="caret"></span></button>
                            <ul class="dropdown-menu" role="menu">
                              <li><a href="#">Mon compte</a></li>
                              <li class="divider"></li>
                              <li><a href="#">Mes aires</a></li>
                              <li><a href="#">Ajouter une aire</a></li>
                            </ul>
                          </div>
                    <form class="navbar-form navbar-right" role="search">
                        <div class="form-group">
                            <input type="text" class="form-control" placeholder="Rechercher une ville">
                        </div>
                        <button type="submit" class="btn btn-default">Rechercher</button>
                    </form>
                </div><!-- /.navbar-collapse -->
            </div><!-- /.container-fluid -->
        </nav>        

        <div class="container">
            <div class="span9">
                {% for type, flashMessages in app.session.flashbag.all() %}
                    {% for flashMessage in flashMessages %}
                        <div class="alert alert-{{ type }}">
                            <button type="button" class="close" data-dismiss="alert">×</button>
                            {{ flashMessage | trans({}, 'flash') }}
                        </div>
                    {% endfor %}
                {% endfor %}

            {% block content %}
            {% endblock %}
        </div>
    </div>
    <hr />

    {% include 'ApplisunAireJeuxBundle::footer.html.twig' %}

</div>
{% block modal %}
    <!-- Modal -->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" 
         aria-labelledby="myModalLabel" aria-hidden="true">

        <div class="modal-dialog">
            <button type="button" class="btn btn-default" 
                    data-dismiss="modal">Fermer
            </button> 
            <div class="modal-content">                                       
            </div>                        
        </div>
    </div>    

    <!-- /.modal -->
{% endblock %}
{% block javascripts %}
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.0/jquery.min.js"></script>
    <script src="{{ asset('bundles/applisunairejeux/js/bootstrap.min.js') }}" type="text/javascript"></script>
    <script src="http://code.highcharts.com/maps/highmaps.js"></script>
    <script src="http://code.highcharts.com/maps/modules/exporting.js"></script>
    <script src="http://code.highcharts.com/mapdata/countries/fr/fr-all-all.js"></script>
    <script src="{{ asset('bundles/applisunairejeux/js/main.js') }}" type="text/javascript"></script>
{% endblock %}
</body>
</html>
