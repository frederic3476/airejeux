<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <title>Aires de jeux de France</title>
        {% block stylesheets %}
            <link href="{{ asset('bundles/applisunairejeux/css/bootstrap.min.css') }}" type="text/css" rel="stylesheet" />
        {% endblock%}
        <style>
        body {
            padding-top: 60px; /* 60px to make the container go all the way to the bottom of the topbar */
        }
        </style>
    </head>
    <body>
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="navbar-inner">
                <div class="container">
                    <a class="brand" href="{{ path('index') }}">AireJeux</a>
                </div>
            </div>
        </div>

        <div class="container">
            <header class="well">
                {% block header %}
                {% endblock %}
            </header>

                <div class="span9">
                    {% for type, flashMessages in app.session.flashbag.all() %}
                        {% for flashMessage in flashMessages %}
                            <div class="alert alert-{{ type }}">
                                <button type="button" class="close" data-dismiss="alert">Ã—</button>
                                {{ flashMessage | trans({}, 'flash') }}
                            </div>
                        {% endfor %}
                    {% endfor %}

                    {% block content %}{% endblock %}
                </div>
            </div>
            <hr />

            {% include 'ApplisunAireJeuxBundle::footer.html.twig' %}

        </div>
        {% block javascripts %}
            <script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.0/jquery.min.js"></script>
            <script src="{{ asset('bundles/applisunairejeux/js/bootstrap.min.js') }}" type="text/javascript"></script>
        {% endblock %}
    </body>
</html>
