<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <title>
            {% block title %}
                Aires de jeux française
            {% endblock %}
        </title>
        {% block stylesheets %}
            <link rel="stylesheet"  href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css" rel="stylesheet">
            <link href="{{ asset('bundles/applisunairejeux/css/main.css') }}" type="text/css" rel="stylesheet" />
        {% endblock%}
    </head>
    <body>
        <nav class="navbar navbar-default">
            <div class="container">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="{{ path('index') }}">AireJeux</a>
                </div>

                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav">
                    </ul>
                    
                        <div class="btn-group navbar-right">
                            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                                <span class="glyphicon glyphicon-user"></span> Mon espace personnel <span class="caret"></span></button>
                            <ul class="dropdown-menu" role="menu">
                              <li><a href="{{path ('fos_user_profile_show') }}"><span class="glyphicon glyphicon-home"></span>  Mon compte</a></li>
                              <li class="divider"></li>
                              <li><a href="#"><span class="glyphicon glyphicon-list-alt"></span> Mes aires</a></li>
                              <li><a href="#"><span class="glyphicon glyphicon-thumbs-up"></span>  Mes notes</a></li>
                              <li><a href="{{path ('aire_new') }}"><span class="glyphicon glyphicon-plus"></span>  Ajouter une aire</a></li>
                              <li class="divider"></li>
                              <li>
                                  {% if is_granted('ROLE_USER') %}
                                    <a href="{{path ('fos_user_security_logout') }}"><span class="glyphicon glyphicon-remove-sign"></span>  Déconnexion</a>
                                  {% else %}
                                    <a href="{{path ('fos_user_security_login') }}">Connexion</a>  
                                  {% endif %}    
                              </li>
                            </ul>
                          </div>
                </div><!-- /.navbar-collapse -->
            </div><!-- /.container-fluid -->
        </nav>        

        <div class="container">
            <div class="span9">
                {% for type, flashMessages in app.session.flashbag.all() %}
                    {% for flashMessage in flashMessages %}
                        <div class="alert alert-{{ type }}">
                            <button type="button" class="close" data-dismiss="alert">×</button>
                            {{ flashMessage | trans({}, 'flash') }}
                        </div>
                    {% endfor %}
                {% endfor %}

            {% block content %}
            {% endblock %}
        </div>
    </div>
    <hr />

    {% include 'ApplisunAireJeuxBundle::footer.html.twig' %}

</div>
{% block modal %}
    <!-- Modal -->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" 
         aria-labelledby="myModalLabel" aria-hidden="true">

        <div class="modal-dialog">
            <button type="button" class="btn btn-default" 
                    data-dismiss="modal">X
            </button> 
            <div class="modal-content">                                       
            </div>                        
        </div>
    </div>    

    <!-- /.modal -->
{% endblock %}
{% block javascripts %}
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.0/jquery.min.js"></script>
    <script src="{{ asset('bundles/applisunairejeux/js/bootstrap.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/applisunairejeux/js/main.js') }}" type="text/javascript"></script>
{% endblock %}
</body>
</html>
