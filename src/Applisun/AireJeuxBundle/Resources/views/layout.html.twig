<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <title>
            {% block title %}
              Aires de jeux française
            {% endblock %}
        </title>
        {% block stylesheets %}
            <link href="{{ asset('bundles/applisunairejeux/css/bootstrap.min.css') }}" type="text/css" rel="stylesheet" />
            <link href="{{ asset('bundles/applisunairejeux/css/main.css') }}" type="text/css" rel="stylesheet" />
        {% endblock%}
        <style>
        body {
            padding-top: 60px; /* 60px to make the container go all the way to the bottom of the topbar */
        }
        </style>
    </head>
    <body>
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="navbar-inner">
                <div class="container">
                    <a class="brand" href="{{ path('index') }}">AireJeux</a>
                </div>
            </div>
        </div>

        <div class="container">
                <div class="span9">
                    {% for type, flashMessages in app.session.flashbag.all() %}
                        {% for flashMessage in flashMessages %}
                            <div class="alert alert-{{ type }}">
                                <button type="button" class="close" data-dismiss="alert">×</button>
                                {{ flashMessage | trans({}, 'flash') }}
                            </div>
                        {% endfor %}
                    {% endfor %}

                    {% block content %}{% endblock %}
                </div>
            </div>
            <hr />

            {% include 'ApplisunAireJeuxBundle::footer.html.twig' %}

        </div>
        {% block modal %}
              <!-- Modal -->
                <div class="modal fade" id="myModal" tabindex="-1" role="dialog" 
                   aria-labelledby="myModalLabel" aria-hidden="true">
                    
                   <div class="modal-dialog">
                       <button type="button" class="btn btn-default" 
                              data-dismiss="modal">Fermer
                        </button> 
                        <div class="modal-content">                                       
                        </div>                        
                   </div>
                </div>    
                       
               <!-- /.modal -->
          {% endblock %}
        {% block javascripts %}
            <script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.0/jquery.min.js"></script>
            <script src="{{ asset('bundles/applisunairejeux/js/bootstrap.min.js') }}" type="text/javascript"></script>
            <script src="http://code.highcharts.com/maps/highmaps.js"></script>
            <script src="http://code.highcharts.com/maps/modules/exporting.js"></script>
            <script src="http://code.highcharts.com/mapdata/countries/fr/fr-all-all.js"></script>
            <script src="{{ asset('bundles/applisunairejeux/js/main.js') }}" type="text/javascript"></script>
        {% endblock %}
    </body>
</html>
