<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <link rel="icon" type="image/x-icon" href="{{ asset('bundles/applisunairejeux/images/logotete.ico') }}" />
        <title>
            {% block title %}
                Airejeux.com: site de référencement des aires de jeux publiques pour enfants
            {% endblock %}
        </title>
        <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1, maximum-scale=1">
        <meta name="robots" content="index,follow,noarchive" />
        {% block meta %}
            <meta name="description" content="Les aires de jeux publiques pour enfant">
             <meta name="keywords" content="jeu, jeux, public, publics, enfant, enfants, parc, parcs, aire, aires" />
        {% endblock %}
        {% block stylesheets %}
            <link rel="stylesheet"  href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css" rel="stylesheet">
            <link href="//netdna.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
            <link href="{{ asset('bundles/applisunairejeux/css/main.css') }}" type="text/css" rel="stylesheet" />
        {% endblock%}
    </head>
    <body>
        <div id="nav-wrapper" data-spy="affix" data-offset-top="60">
            <nav class="navbar navbar-default orange">
                <div class="container">
                    <!-- Brand and toggle get grouped for better mobile display -->
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <img class="img-responsive fleft logo" src="{{ asset('bundles/applisunairejeux/images/logotete.svg') }}" />
                        <img class="img-responsive fleft logo textelogo" src="{{ asset('bundles/applisunairejeux/images/textelogo.svg') }}" />
                    </div>

                    <!-- Collect the nav links, forms, and other content for toggling -->
                    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                        <ul class="nav navbar-nav navbar-right">
                            <li><a href="{{path ('index') }}" >ACCUEIL</a></li>
                            <li><a href="{{path ('aire_new') }}" >AJOUTER</a></li>
                            <li><a href="{{ path('search') }}" >RECHERCHER</a></li>
                            <li><a href="{{ path('users') }}" >MEMBRES</a></li>
                            <li><a href="{{path ('fos_user_profile_show') }}">MON COMPTE</a></li>

                        </ul>
                    </div><!-- /.navbar-collapse -->
                </div><!-- /.container-fluid -->
                <div class="subnav">
                    <div class="navbar-inner">
                        <div class="container">
                            {{ render_esi(controller('ApplisunAireJeuxBundle:Default:numbers')) }} 

                            {% if is_granted('ROLE_USER') %}
                                <a class="btn btn-link btn-circle fright" href="{{path ('fos_user_security_logout') }}"><span class="glyphicon glyphicon-remove-sign"></span></a>
                                {% else %}
                                <a class="btn btn-link btn-circle fright" href="{{path ('fos_user_security_login') }}"><span class="glyphicon glyphicon-user"></span></a>  
                                {% endif %}  
                            <div id="social" class="fright">
                                <a href="https://www.facebook.com/airejeuxcom-1628442374088893/timeline/" target="_blank" title="Facebook"><i class="fa fa-facebook"></i></a>
                                <a href="" target="_blank" title="twitter" target="_blank"><i class="fa fa-twitter"></i></a>
                                <a href="" target="_blank" title="google plus" target="_blank"><i class="fa fa-google-plus"></i></a>
                            </div>
                        </div>
                    </div>
                </div>   
            </nav>
        </div> 

        <div class="main">
            <div class="span9">
                {% for type, flashMessages in app.session.flashbag.all() %}
                    {% for flashMessage in flashMessages %}
                        <div class="alert alert-{{ type }}">
                            <button type="button" class="close" data-dismiss="alert">×</button>
                            {{ flashMessage | trans({}, 'flash') }}
                        </div>
                    {% endfor %}
                {% endfor %}
                <div class="row contain">
                    <section id="contenu" class="col-xs-12 col-md-8">        
                        {% block content %}
                        {% endblock %}
                    </section>
                    {% block aside %}    
                        <aside class="col-md-4 visible-lg visible-md">
                                <!-- header -->
                            <ins class="adsbygoogle"
                                     style="display:block"
                                     data-ad-client="ca-pub-1034834267685351"
                                     data-ad-slot="4410183622"
                                     data-ad-format="auto">                                         
                            </ins>
                            <script>
                                (adsbygoogle = window.adsbygoogle || []).push({});
                            </script>
                            <a href="{{ path('application') }}">
                                <div id="adMobile" class="row nomargin">
                                    <div class="col-md-6">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <p>Télécharger notre application mobile pour smartphone et tablette !!!</p>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <img src="{{ asset('bundles/applisunairejeux/images/android.png') }}" />
                                            </div>
                                            <div class="col-md-6">
                                                <img src="{{ asset('bundles/applisunairejeux/images/apple.png') }}" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <img class="img-responsive" src="{{ asset('bundles/applisunairejeux/images/appli-airejeux.png') }} " />
                                    </div>
                                </div>
                            </a>    
                            <div class="playground-list">
                                <div class="vignette">NOUVEAUTES</div>
                                {{ render_esi(controller('ApplisunAireJeuxBundle:Aire:newest')) }}
                            </div>
                            <div class="playground-list b-bottom-blue">
                                <div class="vignette">TOP 5</div>
                                {{ render_esi(controller('ApplisunAireJeuxBundle:Aire:top')) }}
                            </div>
                        </aside> 
                    {% endblock %}
                    <div class="center-block">
                        <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
                        <!-- conteneur2 -->
                        <ins class="adsbygoogle"
                             style="display:inline-block;width:728px;height:90px"
                             data-ad-client="ca-pub-1034834267685351"
                             data-ad-slot="5468114429"></ins>
                        <script>
                            (adsbygoogle = window.adsbygoogle || []).push({});
                        </script>
                    </div>
                </div>

            </div>
        </div>

        {% include 'ApplisunAireJeuxBundle::footer.html.twig' %}

    </div>
    {% block javascripts %}
        <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
        <script src="{{ asset('bundles/applisunairejeux/js/bootstrap.js') }}" type="text/javascript"></script>
        <script src="{{ asset('bundles/applisunairejeux/js/main.js') }}" type="text/javascript"></script>
        <script>
            (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
            (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
            m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
            })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

            ga('create', 'UA-67868956-1', 'auto');
            ga('send', 'pageview');

        </script>
    {% endblock %}
</body>
</html>
