{% for aire in aires %}
            <div class="col-xs-6 col-sm-4">
                <div class="thumb-playground">
                    <a href="{{ path('aire_show', {'id': aire.id, 'slug': slugify(aire.nom) }) }}">
                    <img class="img-responsive" src="{% if aire.filename %} 
                         {{ asset('uploads/aires/500-'~aire.filename) }} 
                    {% else %} 
                        {{ asset('bundles/applisunairejeux/images/imagedefaut.png') }} 
                        {% endif %}" />
                    </a>    
                        <div class="city-name">
                            <a class="city-link" href="{{ path('ville_show', {'slug': aire.ville.slug, 'id': aire.ville.id, 'page': 1 }) }}" >{{ aire.ville.nom | truncate(20, false, '...') }}</a>                             
                        </div>    
                </div>    
                    <div class="row">    
                        <div class="col-xs-12">
                            <a class="playground-link" href="{{ path('aire_show', {'id': aire.id, 'slug': slugify(aire.nom) }) }}">{{ aire.nom | truncate(20, false, '...') }}</a>
                        </div>
                        <div class="col-xs-12 hidden-xss"> 
                            <span class="score">
                                {{ displayAverage(aire.average) }}
                            </span>
                        </div>
                </div>      
            </div>
{% endfor %}
{% if aires|length > searchmaxperpage %}
<div id="plus" class="moreResult"></div>
{% endif %}       
